@import '../../assets/we-ui/dist/style/weui.wxss';

.input-wrapper {
  position: absolute;
  z-index: 9;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .7);
}

.input-box {
  padding: 20rpx 20rpx;
  background-color: #444;
}

.input {
  padding: 4rpx 20rpx;
  height: 60rpx;
  color: #333;
  font-size: 28rpx;
  background-color: #eee;
  border-radius: 10rpx;
}

.input-placeholder {
  color: #aaa;
}

.use-avator {
  margin: 50rpx auto;
  display:block;
  width: 240rpx;
  height: 240rpx;
  border: 4rpx solid #333;
  border-radius: 50%;
  box-shadow: 0 0 4rpx #aaa;
}

.list-box {
  margin-bottom: 20rpx;
}
.list-item {
  line-height: 60rpx;
  font-size: 28rpx;
}