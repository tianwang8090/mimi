@import '../../assets/we-ui/dist/style/weui.wxss';
@import '../../components/input-box/input-box.wxss';

.input-wrapper {
  position: absolute;
  z-index: 9;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .7);
}

.user-avator-box {
  position: relative;
  padding: 50rpx 0;
}

.use-avator {
  margin: 0 auto;
  display:block;
  width: 240rpx;
  height: 240rpx;
  border: 4rpx solid #333;
  border-radius: 50%;
  box-shadow: 0 0 4rpx #aaa;
}

.use-avator + i.iconfont {
  position:absolute;
  display:block;
  margin:0 auto;  
  width:240rpx;
  top:40rpx;
  left:0;
  right:0;
  text-align:right;
}

.list-box {
  margin-bottom: 20rpx;
}
.list-item {
  line-height: 60rpx;
  font-size: 32rpx;
}